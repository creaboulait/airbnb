  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%= value %></div>
    <% end %>
  </div>


  <% if flash[:notice] -%>
    <div class = "alert alert-success"><%= flash[:notice] %></div>
  <% end %>

  <%= yield %>

</body>
</html>
